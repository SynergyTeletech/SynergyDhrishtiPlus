<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                 >

                <LinearLayout
                    android:id="@+id/ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/pump_dispenser" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_bg"
                    android:backgroundTint="@color/dark_red"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:text="CURRENT STATUS"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/volume_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vol"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_default" />

                            <TextView
                                android:id="@+id/Amt_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amt"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_default" />

                            <TextView
                                android:id="@+id/status_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Staus"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/price_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_default" />

                            <TextView
                                android:id="@+id/prod_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pump_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="PUMP 1 - TOKHIEM 1-1"
                        android:textColor="@color/white"
                        android:background="@drawable/white_border_bg"
                        android:textSize="@dimen/text_size_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Date/Time"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="20-12-2021"
                            android:textColor="@color/white"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:textColor="@color/white"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Product"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Volume"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_volume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Amount"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Totalizer"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_totalizer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Vihicle No"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_vehicle_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text=""
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="Payment"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />

                        <TextView
                            android:id="@+id/tv_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_border_bg"
                            android:text="2200"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


